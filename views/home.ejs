<body>

  
  <%- include('./components/navbar') -%>    
  <!-- -Card Conatiner Start -->
       <!-- - Alert msg -->
       <% if (isLoggedIn) { %>
       <% if(msg !="" ){%>
        <div class="alert alert-success text-center " role="alert" id="addMsg">
  
            <%=msg + " " +username%>
        </div>
        <%} %> 
        <% } else { %>
          <div class="alert alert-success text-center " role="alert" id="addMsg">
            <%="Please login"%>
        </div>
          <% } %>
  <% if (isLoggedIn) { %>
    <div class="container my-4 custom_card ">
      <div class="all_customers card bg-dark">
        <div class="icon">
            <i class="fas fa-user-plus  text-light"></i>
        </div>
        <div class="icon_link text-center bg-light">
            <a href="/balance" class="btn btn-light cus_in_btn text-dark"> Deposite and WithDraw </a>
        </div>
    </div>
        <!-- - All Customer Card -->
        <div class="all_customers card bg-dark">
          <div class="icon">
              <i class="fas fa-users text-light"></i>
          </div>
          <div class="icon_link text-center bg-light">
              <a href="/data" class="btn btn-light cus_in_btn text-dark"> Your Account </a>
          </div>
      </div>
  </div>
  <% } else { %>
    <div class="container my-4 custom_card ">
      <div class="all_customers card bg-dark">
        <div class="icon">
            <i class="fas fa-user-plus  text-light"></i>
        </div>
        <div class="icon_link text-center bg-light">
            <a href="/register" class="btn btn-light cus_in_btn text-dark"> Get an Account! </a>
        </div>
    </div>
        <!-- - All Customer Card -->
        <div class="all_customers card bg-dark">
          <div class="icon">
              <i class="fas fa-users text-light"></i>
          </div>
          <div class="icon_link text-center bg-light">
              <a href="/login" class="btn btn-light cus_in_btn text-dark"> Login </a>
          </div>
      </div>
  <% } %>





</div>
















