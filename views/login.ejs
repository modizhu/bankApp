<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./components/headTag') -%>
</head>
<body>
    <%- include('./components/navbar') -%>    
        <!-- - Back to all users -->
        <div class="container mt-2">
          <a href="/" class="btn btn-secondary fw-bold ">&larr; Back</a>
      </div>
<div class="container mt-5">
     <!-- - Alert msg -->
     <% if(msg !="" ){%>
      <div class="alert alert-success text-center " role="alert" id="addMsg">

          <%=msg %>
      </div>
      <%} %>

  <div class="container mt-5 bg-primary text-center text-light fw-30 p-2">
    <h3>Login Form</h3>
  </div>
<form action="/login" method="POST" >
    <div class="form-group  mt-3">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="userEmail" placeholder="Enter User Email">
    </div>
    <div class="form-group mt-3">
        <label for="exampleInputEmail1">Password</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="userPassword" placeholder="Enter User Password" required>
      </div>
    <button type="submit" class="btn btn-primary mt-3 text-center">Submit</button>
  </form>
</div>
    <%- include('./components/bootstrapScript') -%>
    <script>
        let alert = document.getElementById('addMsg');
    setTimeout(() => {
        alert.style.visibility = "hidden"
    }, 2000)
    </script>
</body>
</html>